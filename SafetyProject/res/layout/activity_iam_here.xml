<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IAmHereActivity" >

    <TextView
        android:id="@+id/activateGesturesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BuddyGuard"
        android:textColor="#000000"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/inforText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activateGesturesText"
        android:layout_marginTop="40dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Type the message that you want to be sent to your buddies." />

    <EditText
        android:id="@+id/eventText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inforText"
        android:layout_below="@+id/inforText"
        android:layout_marginTop="20dp"
        android:ems="16"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:textSize="40sp"
        android:typeface="normal"
        android:text="00:00" />

    <Button
        android:id="@+id/timerButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:onClick="onClickedTimerButton"
        android:text="Set Timer" />

</RelativeLayout>