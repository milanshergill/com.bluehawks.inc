<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_action_group" />
    </LinearLayout>
 
    <TextView
        android:id="@+id/feature_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Circle of 6"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/feature_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/feature_name"
        android:layout_below="@+id/feature_name"
        android:text="Select your friends"
        android:textColor="#000000"
        android:textSize="10dp"/>
        <!-- android:textColor="#343434" -->

</RelativeLayout>