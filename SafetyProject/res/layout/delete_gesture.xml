<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/gestureDeleteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Following gestures are available in the database:" />
    
    <GridView
        android:id="@+id/gesturesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gestureDeleteText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        style="@layout/drawer_list_row"
        android:horizontalSpacing="1dp"
        android:layoutDirection="ltr"
        android:numColumns="1" >

    </GridView>

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:onClick="onClickClearAll"
        android:text="Clear All" />

</RelativeLayout>
