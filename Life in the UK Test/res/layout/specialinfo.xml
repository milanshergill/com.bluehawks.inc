<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView android:id="@+id/ScrollView01"
android:layout_width="fill_parent"
android:layout_height="wrap_content">  
<RelativeLayout 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
android:soundEffectsEnabled="true"
android:id="@+id/lay"
xmlns:android="http://schemas.android.com/apk/res/android">

<TextView 
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/welcome" 
android:text="This Special Mock test is created in a Special way such that it will consist of NEW questions every single time you start it."
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:textColor="#ffffff"
android:layout_alignParentTop="true"
android:layout_marginTop="20dip"
android:gravity="center_horizontal"
></TextView>
<TextView
android:gravity="center_horizontal" 
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/welcome1" 
android:text="So keep on trying this Special Mock Test until you are satisfied with your performance."
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:textColor="#ffffff"
android:layout_below="@+id/welcome"
android:layout_marginTop="5dip"
></TextView>
<TextView 
android:gravity="center_horizontal"
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/welcome2" 
android:text="However, you must understand that they are a sample test only. We are not responsible for any result of your real Citizenship Test."
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:textColor="#ffffff"
android:layout_below="@+id/welcome1"
android:layout_marginTop="5dip"
></TextView>
<TextView 
android:gravity="center_horizontal"
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/welcome3" 
android:text="The UK citizenship test is a Must-Pass test in your Citizenship application. During the test, you will have 45 minutes to answer 24 multiple choice 
questions about United Kingdom. To pass, you must answer at least 18 of them correctly. Besides, ALL questions on the electoral system MUST be answered correctly. "
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:textColor="#ff0000"
android:layout_below="@+id/welcome2"
android:layout_marginTop="5dip"
></TextView>
<TextView 
android:gravity="center_horizontal"
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/welcome4" 
android:text="BEST OF LUCK!!"
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:textColor="#ff0000"
android:layout_below="@+id/welcome3"
android:layout_marginTop="5dip"
></TextView>
<Button
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/cont" 
android:text="Continue" 
android:layout_height="50dip" 
android:layout_width="200dip" 
android:background="@drawable/nextbutton"
android:textColor="#ffffff"
android:layout_below="@+id/welcome4"
android:layout_marginTop="25dip"
android:layout_centerHorizontal="true"
></Button>
</RelativeLayout>
</ScrollView>
</LinearLayout>
