<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:background="@drawable/background2">
<ScrollView android:id="@+id/ScrollView01"
android:layout_width="fill_parent"
android:layout_height="wrap_content"> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:background="@drawable/background2">
<TextView android:id="@+id/name" 
android:layout_height="wrap_content" 
android:text="Settings" 
android:textSize="25dip"
android:typeface="serif"
android:textColor="#aaffff"
android:textStyle="normal|bold" 
android:gravity="center_vertical|center_horizontal" 
android:layout_width="fill_parent">
</TextView>
<ToggleButton
android:id="@+id/toggle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="50dip"
android:layout_below="@+id/name"
android:textOn="SOUND ON"
android:textOff="SOUND OFF"
android:checked="true"
android:textStyle="bold"
android:typeface="serif"
android:layout_centerHorizontal="true"></ToggleButton>
<Button
android:state_focused="true"
android:textStyle="bold"
android:typeface="serif"
android:textSize="18dip"
android:id="@+id/reset" 
android:text="Reset Scores" 
android:layout_height="50dip" 
android:layout_width="210dip" 
android:background="@drawable/nextbutton"
android:textColor="#ffffff"
android:layout_below="@+id/toggle"
android:layout_centerHorizontal="true"
android:layout_marginTop="50dip"
></Button>
<TextView android:id="@+id/testinfo" 
android:layout_height="50dip" 
android:layout_width="210dip"
android:text="Test Info" 
android:textSize="18dip"
android:typeface="serif"
android:textColor="#ffffff"
android:textStyle="normal|bold" 
android:layout_centerHorizontal="true" 
android:gravity="center_vertical|center_horizontal"
android:layout_below="@+id/reset"
android:layout_marginTop="50dip"
android:background="@drawable/nextbutton">
</TextView>
<TextView android:id="@+id/location" 
android:layout_height="50dip" 
android:layout_width="210dip"
android:text="Find a Test Centre" 
android:textSize="18dip"
android:typeface="serif"
android:textColor="#ffffff"
android:textStyle="normal|bold" 
android:layout_centerHorizontal="true" 
android:gravity="center_vertical|center_horizontal"
android:layout_below="@+id/testinfo"
android:layout_marginTop="50dip"
android:background="@drawable/nextbutton">
</TextView>
</RelativeLayout>
</ScrollView>
</LinearLayout>

