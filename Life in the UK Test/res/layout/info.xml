<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/backlogo"
xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView android:id="@+id/ScrollView01"
android:layout_width="fill_parent"
android:layout_height="wrap_content">  
<RelativeLayout 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
android:soundEffectsEnabled="true"
android:id="@+id/lay"
android:background="@drawable/backlogo"
xmlns:android="http://schemas.android.com/apk/res/android">


<TextView
android:id="@+id/fname"
android:text="Life in the UK Test"
android:layout_marginTop="40dip"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_centerHorizontal="true"
android:textColor="#ffffff"
android:textSize="20dip"
android:textStyle="normal">
</TextView>
<TextView
android:id="@+id/name"
android:text="Version 1.0.0"
android:layout_marginTop="5dip"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_centerHorizontal="true"
android:gravity="center_horizontal"
android:textColor="#ffffff"
android:textSize="10dip"
android:textStyle="normal"
android:layout_below="@+id/fname">
</TextView>
<TextView
android:id="@+id/name1"
android:text="Developed by"
android:layout_marginTop="20dip"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_centerHorizontal="true"
android:gravity="center_horizontal"
android:textColor="#ffffff"
android:textSize="15dip"
android:textStyle="normal"
android:layout_below="@+id/name">
</TextView>
<TextView
android:id="@+id/name2"
android:text="BlueHawks Inc."
android:layout_marginTop="20dip"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_centerHorizontal="true"
android:gravity="center_horizontal"
android:textColor="#ffffff"
android:textSize="20dip"
android:textStyle="normal"
android:layout_below="@+id/name1">
</TextView>
<TextView
android:id="@+id/name3"
android:text="www.bluehawks.ca"
android:layout_marginTop="5dip"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_centerHorizontal="true"
android:gravity="center_horizontal"
android:clickable="true"
android:textColor="#ffffff"
android:textSize="10dip"
android:textStyle="normal"
android:layout_below="@+id/name2">
</TextView>


<ImageView
android:src="@drawable/sll"
android:layout_alignParentLeft="true"
android:layout_marginLeft="30dip"
android:layout_below="@+id/name3"
android:layout_marginTop="68dip"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/logo1"></ImageView>
<Button
android:background="@drawable/button"
android:layout_alignParentRight="true"
android:layout_marginRight="30dip"
android:layout_below="@+id/name3"
android:text="Other Apps"
android:textColor="#000000"
android:typeface="serif"
android:textStyle="bold"
android:layout_marginTop="70dip"
android:layout_width="100dip"
android:layout_height="100dip"
android:id="@+id/otherapps"></Button>
</RelativeLayout>
</ScrollView>
</LinearLayout>