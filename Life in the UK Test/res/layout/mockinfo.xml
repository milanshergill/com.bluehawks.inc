<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView android:id="@+id/ScrollView01"
android:layout_width="fill_parent"
android:layout_height="wrap_content">  
<RelativeLayout 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
android:soundEffectsEnabled="true"
android:id="@+id/lay"
xmlns:android="http://schemas.android.com/apk/res/android">

<TextView 
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/welcome" 
android:text="Take this whole series of UK Citizenship practice Mock Tests to see if you're prepared for the real UK Citizenship Test."
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:textColor="#ffffff"
android:layout_alignParentTop="true"
android:layout_marginTop="20dip"
android:gravity="center_horizontal"
></TextView>
<TextView
android:gravity="center_horizontal" 
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/welcome1" 
android:text="These tests are built to mimic the structure of the real UK Citizenship Test, and they use the same structure that is used in real Citizenship Test and It is recomended that you attempt all 15 Mock Test with ZERO mistakes before taking your real test."
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:textColor="#ffffff"
android:layout_below="@+id/welcome"
android:layout_marginTop="5dip"
></TextView>
<TextView 
android:gravity="center_horizontal"
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/welcome2" 
android:text="However, you must understand that they are a sample test only. We are not responsible for any result of your real UK Citizenship Test."
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:textColor="#ffffff"
android:layout_below="@+id/welcome1"
android:layout_marginTop="5dip"
></TextView>
<TextView 
android:gravity="center_horizontal"
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/welcome3" 
android:text="The UK citizenship test is a Must-Pass test in your Citizenship application. During the test, you will have 45 minutes to answer 24 multiple choice questions about United Kingdom.
To pass, you must answer at least 18 of them correctly."
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:textColor="#ff0000"
android:layout_below="@+id/welcome2"
android:layout_marginTop="5dip"
></TextView>
<TextView 
android:gravity="center_horizontal"
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/welcome4" 
android:text="BEST OF LUCK!!"
android:layout_height="wrap_content" 
android:layout_width="fill_parent"
android:textColor="#ff0000"
android:layout_below="@+id/welcome3"
android:layout_marginTop="5dip"
></TextView>
<Button
android:textStyle="bold"
android:typeface="serif"
android:id="@+id/cont" 
android:text="Continue" 
android:layout_height="50dip" 
android:layout_width="200dip" 
android:background="@drawable/nextbutton"
android:textColor="#ffffff"
android:layout_below="@+id/welcome4"
android:layout_marginTop="25dip"
android:layout_centerHorizontal="true"
></Button>
</RelativeLayout>
</ScrollView>
</LinearLayout>
